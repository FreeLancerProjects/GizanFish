<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="backListener"
            type="com.gizanfish.interfaces.Listeners.BackListener" />

        <variable
            name="cartCount"
            type="Integer" />

        <variable
            name="lang"
            type="String" />

        <import type="android.graphics.Color" />

        <variable
            name="model"
            type="com.gizanfish.models.SingleProductDataModel" />

        <variable
            name="marketName"
            type="String" />

        <import type="android.view.View" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray0"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/second"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:onClick="@{()->backListener.back()}"
                android:orientation="horizontal"

                >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:clickable="false"
                    android:longClickable="false"
                    android:padding="8dp"
                    android:rotation='@{lang.equals("ar")?180:0}'
                    android:src="@drawable/ic_left_arrow"
                    android:tint="@color/white"

                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:clickable="false"
                    android:longClickable="false"
                    android:text="@{model.title}"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/flCart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:visibility="gone"

                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@color/circle_bg"
                    app:civ_border_width="0dp"
                    app:civ_circle_background_color="@color/circle_bg"

                    />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:longClickable="false"
                    android:padding="8dp"
                    android:src="@drawable/ic_cart"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/circle_not_bg"
                    android:clickable="false"
                    android:gravity="center"
                    android:longClickable="false"
                    android:singleLine="true"
                    android:text='@{String.valueOf(cartCount),default="0"}'
                    android:textColor="@color/second"
                    android:textSize="12sp"
                    android:visibility='@{cartCount==0?View.GONE:View.VISIBLE,default=gone}' />

            </FrameLayout>

        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:fillViewport="true"
                    android:fitsSystemWindows="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="3dp"


                            >

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <FrameLayout
                                    android:id="@+id/flSlider"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp">

                                    <androidx.viewpager.widget.ViewPager
                                        android:id="@+id/pager"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />

                                    <com.google.android.material.tabs.TabLayout
                                        android:id="@+id/tab"
                                        android:layout_width="wrap_content"
                                        android:layout_height="7dp"
                                        android:layout_gravity="bottom|center_horizontal"
                                        android:layout_margin="8dp"
                                        android:layout_marginBottom="8dp"
                                        app:tabBackground="@drawable/tab_indicator"
                                        app:tabGravity="fill"
                                        app:tabIndicatorHeight="0dp"
                                        app:tabMaxWidth="7dp"
                                        app:tabMode="scrollable" />

                                    <ProgressBar
                                        android:id="@+id/progBarSlider"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center" />
                                </FrameLayout>


                            </FrameLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="3dp"
                            app:contentPadding="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                                    android:id="@+id/simplarate"
                                    rate="@{model.rate}"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:gravity="end|center_vertical"
                                    app:srb_drawBorderEnabled="true"
                                    app:srb_isIndicator="true"

                                    app:srb_numberOfStars="5"
                                    app:srb_starBackgroundColor="@color/white"
                                    app:srb_starBorderWidth="3"
                                    app:srb_starSize="15dp"
                                    app:srb_starsSeparation="10dp"
                                    app:srb_stepSize=".5"

                                    />

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@{model.title}"
                                        android:textColor="@color/black"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:text='@{model.contents}'
                                    android:textColor="@color/gray6"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8sp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="2dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="2dp"
                                        android:clickable="false"
                                        android:longClickable="false"
                                        android:singleLine="true"
                                        android:text="@string/model_num"
                                        android:textColor="@color/gray6"
                                        android:textSize="12sp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="2dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="2dp"
                                        android:text="@{model.model}"
                                        android:textColor="@color/gray6"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                </LinearLayout>


                                <TextView
                                    android:id="@+id/tv_oldprice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="10dp"
                                    android:clickable="false"
                                    android:longClickable="false"
                                    android:singleLine="true"
                                    android:text='@{model.old_price+@string/ryal}'
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8sp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvprice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="2dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="2dp"
                                        android:clickable="false"
                                        android:longClickable="false"
                                        android:singleLine="true"
                                        android:text='@{model.price+@string/ryal}'
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="12sp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="2dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="2dp"
                                        android:text="@string/shamil_daribat_alqimih_almudafih"
                                        android:textColor="@color/gray6"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                </LinearLayout>


                                <com.google.android.material.tabs.TabLayout
                                    android:id="@+id/tab1"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:visibility="gone"
                                    app:tabGravity="fill"
                                    app:tabIndicatorHeight="0dp"
                                    app:tabMode="fixed"
                                    app:tabSelectedTextColor="@color/black"
                                    app:tabTextColor="@color/black" />

                                <androidx.viewpager.widget.ViewPager
                                    android:id="@+id/pager2"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:visibility="gone" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="@string/overview"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold"

                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/main_advantages"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold"

                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="10dp"
                                    android:text='@{model.features}'
                                    android:textColor="@color/gray6"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility='@{(model.sizes==null||model.sizes.size()==0)?View.GONE:View.VISIBLE,default=gone}'

                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:text="@string/sizes"
                                        android:textColor="@color/black"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/recsize"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                        </androidx.recyclerview.widget.RecyclerView>
                                    </FrameLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:text="@string/colors"
                                        android:textColor="@color/black"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/reccolor"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                        </androidx.recyclerview.widget.RecyclerView>
                                    </FrameLayout>
                                </LinearLayout>
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <FrameLayout
                    android:id="@+id/fl_add_to_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/colorPrimary">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:longClickable="false"
                        android:orientation="horizontal"

                        >

                        <FrameLayout
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"

                            >

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/image"
                                image="@{model.image}"
                                android:layout_width="25dp"
                                android:layout_height="25dp" />

                            <ImageView
                                android:id="@+id/image_arrow2"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@color/colorPrimary"
                                android:clickable="false"
                                android:longClickable="false"
                                android:padding="7dp"
                                android:src="@drawable/ic_cart"
                                android:tint="@color/white" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:clickable="false"
                            android:gravity="center_vertical"
                            android:longClickable="false"
                            android:maxLines="2"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="@string/add_to_cart"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/expandLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_trans"
                android:clickable="true"
                app:el_duration="300"
                app:el_expanded="false"
                app:el_parallax=".5"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/second"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:padding="10dp"
                        android:text="@string/successfully_added_to_the_cart"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_close"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/small_rounded_btn_primary"
                        android:gravity="center"
                        android:text="@string/close"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </LinearLayout>
            </net.cachapa.expandablelayout.ExpandableLayout>
        </FrameLayout>


    </LinearLayout>


</layout>
